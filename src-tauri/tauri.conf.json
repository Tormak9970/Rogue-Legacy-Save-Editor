{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Rogue Legacy Save Editor",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": { "all": true },
      "path": { "all": true },
      "fs": {
        "all": true,
        "scope": [
          "$APP/**",
          "$DESKTOP/**",
          "$DOCUMENT/**",
          "$RESOURCE/**",
          "$DATA/**"
        ]
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": [
          "$APP/**",
          "$DESKTOP/**",
          "$DOCUMENT/**",
          "$RESOURCE/**",
          "$DATA/**"
        ]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": { "all": true }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "Copyright Travis Lane 2022",
      "deb": { "depends": [] },
      "externalBin": [],
      "icon": [ "icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico" ],
      "identifier": "dev.tormak.rogue-legacy-dungeon-save-editor",
      "longDescription": "The Rogue Legacy Save Editor is a tool for decoding and encoding game saves from Rogue Legacy 1 & 2.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["../settings.json"],
      "shortDescription": "The Rogue Legacy Save Editor is a tool for decoding and encoding game saves from Rogue Legacy 1 & 2.",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "offlineInstaller"
        }
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'",
      "dangerousDisableAssetCspModification": ["style-src"]
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 740,
        "resizable": true,
        "title": "Rogue Legacy Save Editor",
        "width": 1170,
        "decorations": false,
        "center": true,
        "visible": false
      }
    ]
  }
}
